@using System.Web.Optimization
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container" data-ng-controller="menuBarCtrl">
        <div class="navbar-header">
            <!-- You'll want to use a responsive image option so this logo looks good on devices - I recommend using something like retina.js (do a quick Google search for it and you'll find it) -->
            <a class="navbar-brand" href="#!/home">Blaine Smith</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
                <li data-ng-class="{ active: isActive('/home')}" data-match-route="/home"><a href="#!/home">Home</a></li>
                <li><a href="http://blog.blainesmith.net">Blog</a></li>
                <li data-ng-class="{ active: isActive('/portfolio')}" data-match-route="/portfolio"><a href="#!/portfolio">Portfolio</a></li>
                <li data-ng-class="{ active: isActive('/resume')}" data-match-route="/resume"><a href="#!/resume">Resume</a></li>
                <li data-ng-class="{ active: isActive('/contact')}" data-match-route="/contact"><a href="#!/contact">Contact</a></li>
                <li data-ng-class="{ active: isActive('/login')}" data-ng-click="login()" data-match-route="/login"><a href="#!/login">Login</a></li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<div data-ng-view class="container"></div>

<!-- JavaScript -->
@section Scripts
{
    @Scripts.Render("~/site/Startup")
    @Scripts.Render("~/site/Controllers")
    @Scripts.Render("~/site/Dialogs")
    @Scripts.Render("~/site/Directives")
    @Scripts.Render("~/site/Services")
}

