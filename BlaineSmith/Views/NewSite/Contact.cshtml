<div id="about">
    <div class="wrap">
        <div class="container-fluid">
            @Html.Partial("NavAccessoryLayout")

            <div class="row text-center animated fadeInDownBig">
                <div class="col-md-12">
                    <h1>Get in touch</h1>
                    <p>For references, a resume, or just to chat, send me a message and I will respond to you quickly.</p>
                </div>
            </div>
            <div class="row animated fadeInLeftBig">
                <div class="col-md-2 col-md-offset-1">
                    <address>
                        <strong>Blaine Smith</strong><br>
                        <a style="color:lightgrey;"href="mailto:#">blaine@blainesmith.net</a>
                    </address>
                </div>
                <!-- Contact Form -->
                <div class="col-md-9">
                    <div class="row">
                        <form  name="contact" class="contact-form">
                            <div class="col-md-4 col-sm-4">
                                <input type="text" class="form-control" placeholder="Your Name"  required ng-model="model.email.FromName">
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <input type="text" class="form-control" placeholder="Your Email" required ng-model="model.email.FromEmail">
                            </div>
                            <div class="col-md-4 col-sm-4">
                                <input type="text" class="form-control" placeholder="Subject" required ng-model="model.email.Subject">
                            </div>
                            <div class="clearfix"></div>
                            <div class="col-md-12">
                                <textarea class="form-control" rows="9" required ng-model="model.email.Body"></textarea>
                            </div>
                            <div class="col-md-12 text-right">
                                <button type="button" class="btn btn-default" ng-disabled="contact.$invalid" ng-click="sendEmail()">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- /Contact Form -->
            </div>
            @Html.Partial("SiteFooter")
        </div>
        <!-- /.container -->
    </div>
    <!-- /.wrap -->
</div>


<script src="~/Scripts/Template/borderMenu.js"></script>
<script src="~/Scripts/Template/custom.js"></script>

